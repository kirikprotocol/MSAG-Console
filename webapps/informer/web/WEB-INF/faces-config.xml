<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.2//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

  <application>
    <default-render-kit-id>
      org.apache.myfaces.trinidad.core
    </default-render-kit-id>

    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.web.resources.Informer</base-name>
      <var>msg</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.admin.informer.InformerSettings</base-name>
      <var>informerSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.admin.smsc.Smsc</base-name>
      <var>smscBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.admin.regions.Region</base-name>
      <var>regionBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.admin.retry_policies.RetryPolicySettings</base-name>
      <var>retryPolicyBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>mobi.eyeline.informer.admin.users.User</base-name>
      <var>userBundle</var>
    </resource-bundle>

  </application>

  <converter>
    <converter-id>timeZoneConverter</converter-id>
    <converter-class>mobi.eyeline.informer.web.controllers.TimeZoneNameConverter</converter-class>
  </converter>

  <converter>
    <converter-id>timeZoneIdConverter</converter-id>
    <converter-class>mobi.eyeline.informer.web.controllers.TimeZoneIdConverter</converter-class>
  </converter>

  <converter>
    <converter-id>daemonsConverter</converter-id>
    <converter-class>mobi.eyeline.informer.web.controllers.DaemonsConverter</converter-class>
  </converter>


  <render-kit>
    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>collapsingGroup</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.collapsing_group.CollapsingGroupRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dynamicTable</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.dynamic_table.DynamicTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>buttonsPanel</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.buttons_panel.ButtonsPanelRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTable</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.data_table.DataTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableColumn</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.data_table.ColumnRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableRow</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.data_table.RowRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>updatableContent</renderer-type>
      <renderer-class>mobi.eyeline.informer.web.components.updatable_content.UpdatableContentRenderer</renderer-class>
    </renderer>
  </render-kit>



  <managed-bean>
    <managed-bean-name>topMenu</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.TopMenu</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>logout</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.LogoutController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>journal</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.journal.JournalController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>config</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.config.InformerConfigController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>blacklist</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.blacklist.BlacklistController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>regions</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.regions.RegionsListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>regionsUpload</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.regions.RegionsUploadController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>regionEdit</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.regions.RegionEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>smsc</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.smsc.SmscListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>smscEdit</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.smsc.SmscEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>blacklistUpload</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.blacklist.BlacklistUploadController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>index1</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.Index1Controller</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>informerStatus</managed-bean-name>
    <managed-bean-class>mobi.eyeline.informer.web.controllers.InformerStatusController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
      <managed-bean-name>retryPolicies</managed-bean-name>
      <managed-bean-class>mobi.eyeline.informer.web.controllers.retry_policies.RetryPolicyListController</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
      <managed-bean-name>retryPolicyEdit</managed-bean-name>
      <managed-bean-class>mobi.eyeline.informer.web.controllers.retry_policies.RetryPolicyEditController</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
      <managed-bean-name>usersList</managed-bean-name>
      <managed-bean-class>mobi.eyeline.informer.web.controllers.users.UserListController</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
      <managed-bean-name>userEdit</managed-bean-name>
      <managed-bean-class>mobi.eyeline.informer.web.controllers.users.UserEditController</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
      <managed-bean-name>userGroupEdit</managed-bean-name>
      <managed-bean-class>mobi.eyeline.informer.web.controllers.users.UserGroupEditController</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <navigation-rule>
    <navigation-case>
      <from-outcome>INDEX</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>JOURNAL</from-outcome>
      <to-view-id>/journal/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>CONFIG</from-outcome>
      <to-view-id>/config/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>BLACKLIST</from-outcome>
      <to-view-id>/blacklist/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>BLACKLIST_UPLOAD</from-outcome>
      <to-view-id>/blacklist/upload.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>SMSC</from-outcome>
      <to-view-id>/smsc/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>SMSC_EDIT</from-outcome>
      <to-view-id>/smsc/edit.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>REGION</from-outcome>
      <to-view-id>/regions/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>REGION_UPLOAD</from-outcome>   
      <to-view-id>/regions/upload.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>REGION_EDIT</from-outcome>
      <to-view-id>/regions/edit.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>RETRY_POLICIES</from-outcome>
      <to-view-id>/retry_policies/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>RETRY_POLICY_EDIT</from-outcome>
      <to-view-id>/retry_policies/edit.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>USERS</from-outcome>
      <to-view-id>/users/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>USER_EDIT</from-outcome>
      <to-view-id>/users/edit.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>USER_EDIT_GROUP</from-outcome>
      <to-view-id>/users/editGroup.xhtml</to-view-id>
    </navigation-case>

  </navigation-rule>

</faces-config>