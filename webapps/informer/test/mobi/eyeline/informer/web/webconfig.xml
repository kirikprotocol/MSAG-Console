<config>

  <section name="installation">
    <!-- Possible values: single, hs, ha -->
    <param name="type" type="string">ha</param>
    <!-- For HS installation only -->
    <param name="mirrorpath" type="string">mirror</param>
  </section>

  <!-- For HS and Single installation types -->
  <section name="daemon">
    <param name="host" type="string">localhost</param>
    <param name="port" type="int">10000</param>
  </section>

  <section name="nodes">
    <section name="sunfire"/>
  </section>

  <section name="system">
    <param name="journal dir" type="string">journal</param>
  </section>

  <section name="javamail">
    <param name="mail.host" type="string">localhost</param>
    <param name="mail.user" type="string">user</param>
    <param name="mail.password" type="string">password</param>
    <param name="mail.transport.protocol" type="string">smtp</param>
    <param name="mail.from" type="string">admin@informer.com</param>
  </section>


</config>