<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
  xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
        <servlet-name>applet</servlet-name>
        <servlet-class>ru.sibinco.scag.beans.rules.applet.myServlet</servlet-class>
        <init-param>
          <param-name>clientInputTimeout</param-name>
          <param-value>100</param-value>
        </init-param>
        <init-param>
          <param-name>debug</param-name>
          <param-value>5</param-value>
        </init-param>
       <init-param>
          <param-name>readonly</param-name>
          <param-value>false</param-value>
        </init-param>
         <load-on-startup>5</load-on-startup>
    </servlet>
  <filter>
    <filter-name>SCAG</filter-name>
    <filter-class>ru.sibinco.scag.beans.SCAGFilter</filter-class>
  </filter>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>global gateway pages</web-resource-name>
      <url-pattern>/gw/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>gw</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway routing related pages</web-resource-name>
      <url-pattern>/routing/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>routing</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway services related pages</web-resource-name>
      <url-pattern>/services/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>gw</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway statistics</web-resource-name>
      <url-pattern>/stat/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>stat</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway endpoints</web-resource-name>
      <url-pattern>/endpoints/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>gw</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

