  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>SMSC.SmscRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login.jsp?loginError=true</form-error-page>
    </form-login-config>
  </login-config>

  <security-role>
    <role-name>gw</role-name>
  </security-role>
  <security-role>
    <role-name>routing</role-name>
  </security-role>
  <security-role>
    <role-name>services</role-name>
  </security-role>
  <security-role>
    <role-name>stat</role-name>
  </security-role>
  <security-role>
    <role-name>rule</role-name>
  </security-role>


  <display-name>SCA Gateway</display-name>
  <description>SCA GatewayAdministrationApplication</description>

  <context-param>
    <description>Application config file</description>
    <param-name>AppConfigFile</param-name>
    <param-value>conf/webconfig.xml</param-value>
  </context-param>

  <jsp-config>
    <taglib>
      <taglib-uri>/scag/func</taglib-uri>
      <taglib-location>/WEB-INF/scag.tld</taglib-location>
    </taglib>
