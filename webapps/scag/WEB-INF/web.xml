  <servlet-mapping>
       <servlet-name>applet</servlet-name>
       <url-pattern>/applet/*</url-pattern>
    </servlet-mapping>
 
  <filter-mapping>
    <filter-name>SCAG</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
