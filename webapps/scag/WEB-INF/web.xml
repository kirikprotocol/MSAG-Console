<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
  xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <filter>
    <filter-name>SCAG</filter-name>
    <filter-class>ru.sibinco.scag.beans.SmppGWFilter</filter-class>
  </filter>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>global gateway pages</web-resource-name>
      <url-pattern>/gw/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>gw</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway routing related pages</web-resource-name>
      <url-pattern>/routing/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>routing</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway services related pages</web-resource-name>
      <url-pattern>/services/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>gw</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>gateway statistics</web-resource-name>
      <url-pattern>/stat/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>stat</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>SMSC.SmscRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login.jsp?loginError=true</form-error-page>
    </form-login-config>
  </login-config>

  <security-role>
    <role-name>gw</role-name>
  </security-role>
  <security-role>
    <role-name>routing</role-name>
  </security-role>
  <security-role>
    <role-name>services</role-name>
  </security-role>
  <security-role>
    <role-name>stat</role-name>
  </security-role>

  <display-name>SMPP Gateway</display-name>
  <description>SMPP GatewayAdministrationApplication</description>

  <context-param>
    <description>Application config file</description>
    <param-name>AppConfigFile</param-name>
    <param-value>conf/webconfig.xml</param-value>
  </context-param>

  <jsp-config>
    <taglib>
      <taglib-uri>/scag/func</taglib-uri>
      <taglib-location>/WEB-INF/scag.tld</taglib-location>
    </taglib>
    <!--jsp-property-group>
      <display-name>SMPP Gateway</display-name>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
      <scripting-invalid>false</scripting-invalid>
      <is-xml>false</is-xml>
      <include-prelude>/WEB-INF/inc/prelude.jspf</include-prelude>
      <include-coda>/WEB-INF/inc/coda.jspf</include-coda>
    </jsp-property-group-->
  </jsp-config>

  <filter-mapping>
    <filter-name>SCAG</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
