<project default="dist" basedir="." name="ALL">
  <description>Builds all webapps</description>

  <input addproperty="work_path" message="Working directory [out]:" defaultvalue="out"/>
  <input addproperty="dist_path" message="Distribs directory [dist]:" defaultvalue="dist"/>

  <property name="log4j_jar" location="smppgw/WEB-INF/lib/log4j-1.2.8.jar"/>
  <property name="servlet_jar" location="${CATALINA_HOME}/common/lib/servlet-api.jar"/>
  <property name="jmx_jar" location="${CATALINA_HOME}/bin/jmx.jar"/>
  <property name="catalina_jar" location="${CATALINA_HOME}/server/lib/catalina.jar"/>

  <property name="sibinco_lib" location="${dist_path}/sibinco_lib.jar"/>
  <property name="tomcat_auth_lib" location="${dist_path}/sibinco_tomcat_auth.jar"/> 
  <property name="tomcat_auth_common_lib" location="tomcat_auth/lib/sibinco_tomcat_auth_common.jar"/>
  <property name="tomcat_auth_server_lib" location="tomcat_auth/lib/sibinco_tomcat_auth_server.jar"/>
  <!--echoproperties prefix="cat"/-->

  <target name="init">
    <tstamp/>
    <mkdir dir="${work_path}"/>
    <mkdir dir="${dist_path}"/>
  </target>

  <target name="compile" depends="init" description="compile the sources">
    <!--ant dir="tomcat_auth" target="compile"/-->
    <ant dir="smsc_lib" target="compile"/>
    <ant dir="smppgw" target="compile"/>
  </target>

  <target name="dist" depends="init" description="generate the distribution" >
    <!--ant dir="tomcat_auth" target="dist"/-->
    <ant dir="smsc_lib" target="dist"/>
    <ant dir="smppgw" target="dist"/>
  </target>

  <target name="clean" description="clean up" >
    <!--ant dir="tomcat_auth" target="clean"/-->
    <ant dir="smsc_lib" target="clean"/>
    <ant dir="smppgw" target="clean"/>
  </target>
</project>