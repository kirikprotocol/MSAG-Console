<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.2//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >    
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

  <application>
    <default-render-kit-id>
      org.apache.myfaces.trinidad.core
    </default-render-kit-id>
    
    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.CommonSettings</base-name>
      <var>commonSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.InstanceSettings</base-name>
      <var>instanceSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.users.User</base-name>
      <var>userBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.users.UserPreferences</base-name>
      <var>userPrefsBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.web.resources.Smsc</base-name>
      <var>msg</var>
    </resource-bundle>

  </application>

  <converter>
    <converter-id>smpp_status_converter</converter-id>
    <converter-class>ru.novosoft.smsc.web.controllers.SmppStatusConverter</converter-class>
  </converter>

  <converter>
    <converter-id>roles_converter</converter-id>
    <converter-class>ru.novosoft.smsc.web.controllers.RolesConverter</converter-class>
  </converter>

  <render-kit>    
    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>collapsingGroup</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.collapsing_group.CollapsingGroupRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dynamicTable</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.dynamic_table.DynamicTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>buttonsPanel</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.buttons_panel.ButtonsPanelRenderer</renderer-class>
    </renderer>    

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTable</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.DataTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableColumn</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.ColumnRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableRow</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.RowRenderer</renderer-class>
    </renderer>
  </render-kit>


  <managed-bean>
    <managed-bean-name>smscStatus</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.SmscStatusController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>users</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.UsersController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>userEdit</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.UserEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>reschedule</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.RescheduleController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>rescheduleEdit</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.RescheduleEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>dynamicTable</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.DynamicModel</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>idGen</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.util.IdGenerator</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>logout</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.LogoutController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>topMenu</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.TopMenu</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>smscConfig</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.SmscConfigController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>tableTest</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.TestTableController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>index1</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.Index1Controller</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>




  <navigation-rule>
    <navigation-case>
      <from-outcome>INDEX</from-outcome>
      <to-view-id>/smsc/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>INDEX1</from-outcome>
      <to-view-id>/smsc/index1.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>SMSC_CONFIG</from-outcome>
      <to-view-id>/smsc/smsc_config.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>RESCHEDULE</from-outcome>
      <to-view-id>/smsc/reschedule/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>RESCHEDULE_EDIT</from-outcome>
      <to-view-id>/smsc/reschedule/edit.faces</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>USERS</from-outcome>
      <to-view-id>/smsc/users/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>USER_EDIT</from-outcome>
      <to-view-id>/smsc/users/edit.faces</to-view-id>
    </navigation-case>
  </navigation-rule>


</faces-config>