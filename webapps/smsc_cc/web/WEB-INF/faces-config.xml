<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.2//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >    
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

  <application>
    <default-render-kit-id>
      org.apache.myfaces.trinidad.core
    </default-render-kit-id>
    
    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.closed_groups.ClosedGroup</base-name>
      <var>closedGroupsBundle</var>
    </resource-bundle>


    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.CommonSettings</base-name>
      <var>commonSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.InstanceSettings</base-name>
      <var>instanceSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.users.User</base-name>
      <var>userBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.users.UserPreferences</base-name>
      <var>userPrefsBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.map_limit.MapLimitSettings</base-name>
      <var>mapLimitBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.map_limit.CongestionLevel</base-name>
      <var>mapLimitCongLvlBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.fraud.FraudSettings</base-name>
      <var>fraudSettingsBundle</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.web.resources.Smsc</base-name>
      <var>msg</var>
    </resource-bundle>

  </application>

  <converter>
    <converter-id>smpp_status_converter</converter-id>
    <converter-class>ru.novosoft.smsc.web.controllers.reschedule.SmppStatusConverter</converter-class>
  </converter>

  <converter>
    <converter-id>addressesConverter</converter-id>
    <converter-class>ru.novosoft.smsc.web.controllers.closed_groups.AdressesConverter</converter-class>
  </converter>

  <converter>
    <converter-id>roles_converter</converter-id>
    <converter-class>ru.novosoft.smsc.web.controllers.users.RolesConverter</converter-class>
  </converter>

  <render-kit>    
    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>collapsingGroup</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.collapsing_group.CollapsingGroupRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dynamicTable</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.dynamic_table.DynamicTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>buttonsPanel</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.buttons_panel.ButtonsPanelRenderer</renderer-class>
    </renderer>    

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTable</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.DataTableRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableColumn</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.ColumnRenderer</renderer-class>
    </renderer>

    <renderer>
      <component-family>Eyeline</component-family>
      <renderer-type>dataTableRow</renderer-type>
      <renderer-class>ru.novosoft.smsc.web.components.data_table.RowRenderer</renderer-class>
    </renderer>
  </render-kit>


  <managed-bean>
    <managed-bean-name>mapLimits</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.map_limit.MapLimitController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>smscStatus</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.SmscStatusController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>closed_groups</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.closed_groups.ClosedGroupsListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>closed_group_edit</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.closed_groups.ClosedGroupEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>users</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.users.UsersListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>


  <managed-bean>
    <managed-bean-name>userEdit</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.users.UserEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>reschedule</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.reschedule.RescheduleListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>rescheduleEdit</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.reschedule.RescheduleEditController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>dynamicTable</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.DynamicModel</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>logout</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.LogoutController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>topMenu</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.TopMenu</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>smscConfig</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.smsc_config.SmscConfigController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>index1</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.Index1Controller</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>journal</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.journal.JournalController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>logging</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.logging.LoggingController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>fraud</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.fraud.FraudController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <navigation-rule>
    <navigation-case>
      <from-outcome>INDEX</from-outcome>
      <to-view-id>/smsc/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>INDEX1</from-outcome>
      <to-view-id>/smsc/index1.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>SMSC_CONFIG</from-outcome>
      <to-view-id>/smsc/smsc_service/smsc_config.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>RESCHEDULE</from-outcome>
      <to-view-id>/smsc/reschedule/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>RESCHEDULE_EDIT</from-outcome>
      <to-view-id>/smsc/reschedule/edit.faces</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>MAP_LIMIT</from-outcome>
      <to-view-id>/smsc/smsc_service/maplimits.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>USERS</from-outcome>
      <to-view-id>/smsc/users/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>USER_EDIT</from-outcome>
      <to-view-id>/smsc/users/edit.faces</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>CLOSED_GROUP_EDIT</from-outcome>
      <to-view-id>/smsc/closed_groups/edit.faces</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>CLOSED_GROUPS</from-outcome>
      <to-view-id>/smsc/closed_groups/index.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
        <from-outcome>FRAUD</from-outcome>
        <to-view-id>/smsc/fraud/fraud.faces</to-view-id>
        <redirect/>
    </navigation-case>
    
  </navigation-rule>


</faces-config>