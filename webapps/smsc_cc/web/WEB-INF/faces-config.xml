<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.2//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

  <application>
    <default-render-kit-id>
      org.apache.myfaces.trinidad.core
    </default-render-kit-id>
    
    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.CommonSettings</base-name>
      <var>commonSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.admin.smsc.InstanceSettings</base-name>
      <var>instanceSettings</var>
    </resource-bundle>

    <resource-bundle>
      <base-name>ru.novosoft.smsc.web.resources.Smsc</base-name>
      <var>msg</var>
    </resource-bundle>

  </application>


  <managed-bean>
    <managed-bean-name>dynamicTable</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.DynamicModel</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>idGen</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.IdGenerator</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>logout</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.LogoutController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>topMenu</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.TopMenu</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>smscConfig</managed-bean-name>
    <managed-bean-class>ru.novosoft.smsc.web.controllers.SmscConfigController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>




  <navigation-rule>
    <navigation-case>
      <from-outcome>INDEX</from-outcome>
      <to-view-id>/smsc/index.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>SMSC_CONFIG</from-outcome>
      <to-view-id>/smsc/smsc_config.faces</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>LOGOUT</from-outcome>
      <to-view-id>/smsc/index.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>


</faces-config>