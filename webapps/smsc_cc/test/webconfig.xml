<config>

  <section name="installation">
    <!-- Possible values: single, hs, ha -->
    <param name="type" type="string">ha</param>
    <!-- For HS installation only -->
    <param name="mirrorpath" type="string">mirror</param>
  </section>

  <!-- For HS and Single installation types -->
  <section name="daemon">
    <param name="host" type="string">localhost</param>
    <param name="port" type="int">10000</param>
  </section>

  <section name="nodes">
    <section name="sunfire"/>
  </section>

  <section name="system">
    <param name="users file" type="string">test/ru/novosoft/smsc/admin/users/users.xml</param>
  </section>

  <section name="providers">
    <param name="1" type="string">hello</param>
    <param name="2" type="string">mark</param>
    <param name="3" type="string">burger</param>
    <param name="last used provider id" type="int">3</param>
  </section>

  <section name="categories">
    <param name="1" type="string">hello</param>
    <param name="2" type="string">mark</param>
    <param name="3" type="string">burger</param>
    <param name="last used category id" type="int">3</param>
  </section>

  <section name="perfmon">
    <param name="appletPort0" type="int">25020</param>
    <param name="appletPort1" type="int">25021</param>
    <param name="appletPort2" type="int">25022</param>
    <param name="support64Bit" type="bool">false</param>
  </section>

  <section name="topmon">
    <param name="appletPort0" type="int">25030</param>
    <param name="appletPort1" type="int">25031</param>
    <param name="appletPort2" type="int">25032</param>
  </section>

  <section name="statsave_datasource">
    <param name="dbType" type="string">MYSQL</param>
    <param name="pass" type="string">student</param>
    <param name="source" type="string">jdbc:mysql://mangal/summer_edu</param>
    <param name="tables_prefix" type="string">smsc</param>
    <param name="user" type="string">student</param>
  </section>

  <section name="archsave_datasource">
    <param name="dbType" type="string">MYSQL</param>
    <param name="pass" type="string">student</param>
    <param name="source" type="string">jdbc:mysql://mangal/summer_edu</param>
    <param name="tables_prefix" type="string">smsc</param>
    <param name="user" type="string">student</param>
  </section>

  <section name="opersave_datasource">
    <param name="pass" type="string">sms</param>
    <param name="source" type="string">jdbc:oracle:thin:@max:1521:orcl</param>
    <param name="tables_prefix" type="string">smsc</param>
    <param name="user" type="string">sms</param>
  </section>

</config>