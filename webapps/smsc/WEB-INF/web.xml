<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <servlet>
    <servlet-name>smsc</servlet-name>
    <servlet-class>ru.novosoft.smsc.jsp.SMSCJspController</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>conf/webconfig.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>smsc</servlet-name>
    <url-pattern>/smsc/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>403</error-code>
    <location>/error403.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error500.jsp</location>
  </error-page>
  <!-- Using Jacarta Tag libs -->
  <taglib>
    <taglib-uri>http://jakarta.apache.org/taglibs/input-1.0</taglib-uri>
    <taglib-location>/WEB-INF/taglibs-input.tld</taglib-location>
  </taglib>
   
  <!-- security constraints -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/smsc_service/*</url-pattern>
      <url-pattern>/smsc/reshedule/*</url-pattern>
      <url-pattern>/smsc/directives/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>smsc_service</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/locale_resources/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>locale_resources</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/dl/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>dl</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/perfmon/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>perfmon</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/smsview/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>smsView</role-name>
      <role-name>smsView_archive</role-name>
      <role-name>smsView_operative</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/smsstat/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>smsstat</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/mscman/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>mscman</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/users/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>users</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/providers/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>providers</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/categories/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>categories</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>


  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Access Control Lists</web-resource-name>
      <url-pattern>/smsc/acl/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>acls</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/routes/*</url-pattern>
      <url-pattern>/smsc/tracer/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>routes</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/subjects/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>subjects</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/aliases/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>aliases</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/profiles/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>profiles</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/hosts/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>hosts</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/services/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>services</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/services/index.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>service_operator</role-name>
      <role-name>services</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/smsc/topmon/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>topmon</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <!-- login config-->
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>SMSC.SmscRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login.jsp?loginError=yes</form-error-page>
    </form-login-config>
  </login-config>


  <!-- security roles -->

  <security-role>
    <role-name>apply</role-name>
  </security-role>
  <security-role>
    <role-name>smsc_service</role-name>
  </security-role>
  <security-role>
    <role-name>locale_resources</role-name>
  </security-role>
  <security-role>
    <role-name>dl</role-name>
  </security-role>
  <security-role>
    <role-name>perfmon</role-name>
  </security-role>
  <security-role>
    <role-name>topmon</role-name>
  </security-role>
  <security-role>
    <role-name>smsView</role-name>
  </security-role>
  <security-role>
    <role-name>smsView_archive</role-name>
  </security-role>
  <security-role>
    <role-name>smsView_operative</role-name>
  </security-role>
  <security-role>
    <role-name>smsstat</role-name>
  </security-role>
  <security-role>
    <role-name>mscman</role-name>
  </security-role>
  <security-role>
    <role-name>users</role-name>
  </security-role>
  <security-role>
    <role-name>routes</role-name>
  </security-role>
  <security-role>
    <role-name>subjects</role-name>
  </security-role>
  <security-role>
    <role-name>aliases</role-name>
  </security-role>
  <security-role>
    <role-name>profiles</role-name>
  </security-role>
  <security-role>
    <role-name>hosts</role-name>
  </security-role>
  <security-role>
    <role-name>services</role-name>
  </security-role>
  <security-role>
    <description>Access Control List manager</description>
    <role-name>acls</role-name>
  </security-role>
  <security-role>
    <description>Can start/stop/disconnect service, service parameters editing prohibited</description>
    <role-name>service_operator</role-name>
  </security-role>
</web-app>
