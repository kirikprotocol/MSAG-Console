<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="unibalance" default="all">

  <property name="jdk.home.1.4" value="c:/jdk1.4.2/"/>


  <property file="unibalance.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->

  <!-- Compiler options -->


  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
  </patternset>

  <!-- JDK definitions -->
  <path id="jdk.classpath.1.4">
    <fileset dir="${jdk.home.1.4}">
      <include name="../Classes/dt.jar"/>
      <include name="lib/jaws.jar"/>
      <include name="../Classes/jce.jar"/>
      <include name="lib/netscape.jar"/>
      <include name="../Classes/charsets.jar"/>
      <include name="../Classes/classes.jar"/>
      <include name="../Classes/jsse.jar"/>
      <include name="../Classes/laf.jar"/>
      <include name="../Classes/sunrsasign.jar"/>
      <include name="../Classes/ui.jar"/>
      <include name="lib/ext/apple_provider.jar"/>
      <include name="lib/ext/ldapsec.jar"/>
      <include name="lib/ext/localedata.jar"/>
      <include name="lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>

  <property name="project.jdk.home" value="${jdk.home.1.4}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.4"/>

  <!-- Modules -->


  <!-- Module unibalance -->

  <dirname property="module.unibalance.basedir" file="${ant.file}"/>


  <property name="module.jdk.home.unibalance" value="${project.jdk.home}"/>
  <property name="module.jdk.classpath.unibalance" value="${project.jdk.classpath}"/>

  <property name="compiler.args.unibalance" value="${compiler.args}"/>

  <property name="unibalance.output.dir" value="${module.unibalance.basedir}/classes"/>
  <property name="unibalance.testoutput.dir" value="${module.unibalance.basedir}/classes"/>

  <path id="unibalance.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>

  <path id="unibalance.module.classpath">
    <path refid="${module.jdk.classpath.unibalance}"/>
    <pathelement location="${module.unibalance.basedir}/lib/log4j.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/saxpath.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/connpool.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/jaxen-core.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/jcharset.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/adv-core.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/classes12.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/ifxjdbc.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/jsmppapi.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/jaxen-dom.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/tpool.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/yguard.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/adv-client.jar"/>
    <pathelement location="${module.unibalance.basedir}/lib/personalization.jar"/>
  </path>


  <patternset id="excluded.from.module.unibalance">
    <patternset refid="ignored.files"/>
  </patternset>

  <patternset id="excluded.from.compilation.unibalance">
    <patternset refid="excluded.from.module.unibalance"/>
  </patternset>

  <path id="unibalance.module.sourcepath">
    <dirset dir="${module.unibalance.basedir}">
      <include name="src"/>
      <include name="src.share"/>
    </dirset>
  </path>


  <!-- obfuscate -->
  <target name="obfuscate">
    <taskdef name="obfuscate" classname="com.yworks.yguard.ObfuscatorTask"
             classpath="lib/yguard.jar"/>
    <obfuscate mainclass="ru.sibinco.smpp.ub_sme.Sme" logfile="obfuscate.log"
               replaceclassnamestrings="true">
      <property name="error-checking" value="pedantic"/>
      <inoutpair in="lib/unibalance.jar" out="lib/unibalance.jar"/>
      <externalclasses>
        <pathelement location="lib/jsmppapi.jar"/>
      </externalclasses>
      <expose>
        <class classes="protected"
               methods="protected" fields="protected">
        </class>
      </expose>
    </obfuscate>
  </target>


  <target name="jar" depends="compile.module.unibalance">
    <copy file="${module.unibalance.basedir}/history.txt" todir="${unibalance.output.dir}"/>
    <jar basedir="${unibalance.output.dir}" destfile="${module.unibalance.basedir}/lib/unibalance.jar"
         manifest="${module.unibalance.basedir}/manifest.mf">
      <exclude name=".dependency-info/**"/>
      <exclude name="utils/**"/>
    </jar>
    <delete file="${unibalance.output.dir}/history.txt"/>
  </target>

  <target name="compile.module.unibalance"
          depends="compile.module.unibalance.production,compile.module.unibalance.tests"
          description="Compile module unibalance"/>

  <target name="compile.module.unibalance.production" description="Compile module unibalance; production classes">
    <mkdir dir="${unibalance.output.dir}"/>
    <javac destdir="${unibalance.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
           memoryMaximumSize="${compiler.max.memory}" fork="true" executable="${module.jdk.home.unibalance}/bin/javac">
      <compilerarg line="${compiler.args.unibalance}"/>
      <bootclasspath refid="unibalance.module.bootclasspath"/>
      <classpath refid="unibalance.module.classpath"/>
      <src refid="unibalance.module.sourcepath"/>
    </javac>

    <copy todir="${unibalance.output.dir}">
      <fileset dir="${module.unibalance.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="compile.module.unibalance.tests" depends="compile.module.unibalance.production"
          description="compile module unibalance; test classes" unless="skip.tests"/>

  <target name="clean.module.unibalance" description="cleanup module">
    <delete dir="${unibalance.output.dir}"/>
    <delete dir="${unibalance.testoutput.dir}"/>
  </target>

  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>

  <target name="clean" depends="clean.module.unibalance" description="cleanup all"/>

  <target name="all" depends="init, clean, compile.module.unibalance, jar" description="build all"/>

  <target name="all+obfuscate" depends="all, obfuscate" description="build all and obfuscate"/>

</project>