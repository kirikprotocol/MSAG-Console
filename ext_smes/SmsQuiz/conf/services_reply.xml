<?xml version="1.0" encoding="UTF-8"?>

<config>

  <service>
    <service-name>smsquiz_reply</service-name>
    <service-class>mobi.eyeline.smsquiz.quizmanager.service.ReplySMPPService</service-class>
  </service>


  <!--  ========================================= SmsQuiz requests ================================================ -->

  <request>
    <request-name>smsquiz_reply</request-name>
    <message-pattern>(.*)</message-pattern>
  </request>



  <!-- ============================================ Request mapping ================================================ -->


  <request-mapping>
    <request-name>smsquiz_reply</request-name>
    <service-name>smsquiz_reply</service-name>
  </request-mapping>

  <default-service>
    <service-name>smsquiz_reply</service-name>
  </default-service>
</config>