<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="unibalance_minsk" default="all">
  
  
  <property file="unibalance_minsk.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.sbas/**"/>
    <exclude name="**/.IJI.*/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.jdk_1.5" value="${jdk.home.jdk_1.5}/bin"/>
  <path id="jdk.classpath.jdk_1.5">
    <fileset dir="${jdk.home.jdk_1.5}">
      <include name="../../1.5.0/Home/lib/deploy.jar"/>
      <include name="../../1.5.0/Classes/dt.jar"/>
      <include name="../../1.5.0/Home/lib/javaws.jar"/>
      <include name="../../1.5.0/Classes/jce.jar"/>
      <include name="../../1.5.0/Home/lib/plugin.jar"/>
      <include name="../../1.5.0/Home/lib/sa-jdi.jar"/>
      <include name="../../1.5.0/Classes/charsets.jar"/>
      <include name="../../1.5.0/Classes/classes.jar"/>
      <include name="../../1.5.0/Classes/jconsole.jar"/>
      <include name="../../1.5.0/Classes/jsse.jar"/>
      <include name="../../1.5.0/Classes/laf.jar"/>
      <include name="../../1.5.0/Classes/ui.jar"/>
      <include name="../../1.5.0/Home/lib/ext/apple_provider.jar"/>
      <include name="../../1.5.0/Home/lib/ext/dnsns.jar"/>
      <include name="../../1.5.0/Home/lib/ext/localedata.jar"/>
      <include name="../../1.5.0/Home/lib/ext/sunjce_provider.jar"/>
      <include name="../../1.5.0/Home/lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.jdk_1.5}"/>
  <property name="project.jdk.bin" value="${jdk.bin.jdk_1.5}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.jdk_1.5"/>
  
  
  <!-- Application Server Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module UniBalance_minsk -->
  
  <dirname property="module.unibalance_minsk.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.unibalance_minsk" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.unibalance_minsk" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.unibalance_minsk" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.unibalance_minsk" value="${compiler.args}"/>
  
  <property name="unibalance_minsk.output.dir" value="${module.unibalance_minsk.basedir}/classes/production/UniBalance_minsk"/>
  <property name="unibalance_minsk.testoutput.dir" value="${module.unibalance_minsk.basedir}/classes/test/UniBalance_minsk"/>
  
  <path id="unibalance_minsk.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="unibalance_minsk.module.classpath">
    <path refid="${module.jdk.classpath.unibalance_minsk}"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jcharset.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/classes12.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jsmppapi.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/log4j.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/adv-client.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/connpool.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/config"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jdmkrt.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/tpool.jar"/>
  </path>
  
  <path id="unibalance_minsk.runtime.module.classpath">
    <path refid="${module.jdk.classpath.unibalance_minsk}"/>
    <pathelement location="${unibalance_minsk.output.dir}"/>
    <pathelement location="${unibalance_minsk.testoutput.dir}"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jcharset.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/classes12.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jsmppapi.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/log4j.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/adv-client.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/connpool.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/config"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/jdmkrt.jar"/>
    <pathelement location="${module.unibalance_minsk.basedir}/lib/tpool.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.unibalance_minsk">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.unibalance_minsk">
    <patternset refid="excluded.from.module.unibalance_minsk"/>
  </patternset>
  
  <path id="unibalance_minsk.module.sourcepath">
    <dirset dir="${module.unibalance_minsk.basedir}">
      <include name="config"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.unibalance_minsk" depends="compile.module.unibalance_minsk.production,compile.module.unibalance_minsk.tests" description="Compile module UniBalance_minsk"/>
  
  <target name="compile.module.unibalance_minsk.production" description="Compile module UniBalance_minsk; production classes">
    <mkdir dir="${unibalance_minsk.output.dir}"/>
    <javac destdir="${unibalance_minsk.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.unibalance_minsk}/javac" target="1.5">
      <compilerarg line="${compiler.args.unibalance_minsk}"/>
      <bootclasspath refid="unibalance_minsk.module.bootclasspath"/>
      <classpath refid="unibalance_minsk.module.classpath"/>
      <src refid="unibalance_minsk.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.unibalance_minsk"/>
    </javac>
    
    <copy todir="${unibalance_minsk.output.dir}">
      <fileset dir="${module.unibalance_minsk.basedir}/config">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.unibalance_minsk.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.unibalance_minsk.tests" depends="compile.module.unibalance_minsk.production" description="compile module UniBalance_minsk; test classes" unless="skip.tests"/>
  
  <target name="clean.module.unibalance_minsk" description="cleanup module">
    <delete dir="${unibalance_minsk.output.dir}"/>
    <delete dir="${unibalance_minsk.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.unibalance_minsk" description="cleanup all"/>
  
  <target name="all" depends="init, clean, jar" description="build all"/>

  <target name="jar" depends="compile.module.unibalance_minsk">
    <copy file="${module.unibalance_minsk.basedir}/history.txt" todir="${unibalance_minsk.output.dir}"/>
    <jar basedir="${unibalance_minsk.output.dir}" destfile="${module.unibalance_minsk.basedir}/lib/unibalance.jar"
         manifest="${module.unibalance_minsk.basedir}/manifest.mf">
      <exclude name=".dependency-info/**"/>
    </jar>
    <delete file="${unibalance_minsk.output.dir}/history.txt"/>
  </target>

</project>
