<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="textservice" default="all">
  
  
  <property file="textservice.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
  </patternset>
  
  <!-- JDK definitions -->
  <path id="jdk.classpath.1.4">
    <fileset dir="${java.home}">
      <include name="../Classes/dt.jar"/>
      <include name="lib/jaws.jar"/>
      <include name="../Classes/jce.jar"/>
      <include name="lib/netscape.jar"/>
      <include name="../Classes/charsets.jar"/>
      <include name="../Classes/classes.jar"/>
      <include name="../Classes/jsse.jar"/>
      <include name="../Classes/laf.jar"/>
      <include name="../Classes/sunrsasign.jar"/>
      <include name="../Classes/ui.jar"/>
      <include name="lib/ext/apple_provider.jar"/>
      <include name="lib/ext/ldapsec.jar"/>
      <include name="lib/ext/localedata.jar"/>
      <include name="lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${java.home}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.4"/>
  
  <!-- Modules -->
  
  
  <!-- Module textservice -->
  
  <dirname property="module.textservice.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.textservice" value="${project.jdk.home}"/>
  <property name="module.jdk.classpath.textservice" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.textservice" value="${compiler.args}"/>
  
  <property name="textservice.output.dir" value="${module.textservice.basedir}/classes"/>
  <property name="textservice.testoutput.dir" value="${module.textservice.basedir}/classes"/>
  
  <path id="textservice.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="textservice.module.classpath">
    <path refid="${module.jdk.classpath.textservice}"/>
    <pathelement location="${module.textservice.basedir}/lib/jsmppapi.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/connpoll.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/tpool.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/mail.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/sme.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/log4j.jar"/>
    <pathelement location="${module.textservice.basedir}/lib/activation.jar"/>
    <pathelement location="${module.textservice.basedir}/config"/>
  </path>
  
  
  <patternset id="excluded.from.module.textservice">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.textservice">
    <patternset refid="excluded.from.module.textservice"/>
  </patternset>
  
  <path id="textservice.module.sourcepath">
    <dirset dir="${module.textservice.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="clean" description="cleanup all">
    <delete dir="${textservice.output.dir}"/>
    <delete dir="${textservice.testoutput.dir}"/>
  </target>

  <target name="compile" description="compile all">
    <mkdir dir="${textservice.output.dir}"/>
    <javac destdir="${textservice.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memoryMaximumSize="${compiler.max.memory}" fork="true" executable="${module.jdk.home.textservice}/bin/javac">
      <compilerarg line="${compiler.args.textservice}"/>
      <bootclasspath refid="textservice.module.bootclasspath"/>
      <classpath refid="textservice.module.classpath"/>
      <src refid="textservice.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.textservice"/>
    </javac>
    <copy todir="${textservice.output.dir}">
      <fileset dir="${module.textservice.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.textservice"/>
      </fileset>
    </copy>
  </target>

  <target name="jar" depends="compile" description="build all">
    <copy file="${module.textservice.basedir}/history.txt" todir="${textservice.output.dir}"/>
    <jar basedir="${textservice.output.dir}" destfile="${module.textservice.basedir}/lib/txtsrv.jar" manifest="${module.textservice.basedir}/manifest.mf">
      <exclude name=".dependency-info/**"/>
      <exclude name="Test.class"/>
    </jar>
    <delete file="${textservice.output.dir}/history.txt"/>
  </target>

  <target name="all" depends="clean, compile, jar" description="all"/>
</project>