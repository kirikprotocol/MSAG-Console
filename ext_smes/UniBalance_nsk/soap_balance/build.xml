<?xml version="1.0" encoding="UTF-8"?>
<project name="soap_balance" default="package" basedir=".">

  <!-- ====================================================================== -->
  <!-- Cleaning up target                                                     -->
  <!-- ====================================================================== -->

  <target name="clean" description="Clean the output directory">
    <ant antfile="build.xml" dir="client" target="clean"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="clean"/>
    <ant antfile="build.xml" dir="service" target="clean"/>
    <ant antfile="build.xml" dir="service_webapp" target="clean"/>
  </target>

  <!-- ====================================================================== -->
  <!-- Compilation target                                                     -->
  <!-- ====================================================================== -->

  <target name="compile" description="Compile the code">
    <ant antfile="build.xml" dir="client" target="compile"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="compile"/>
    <ant antfile="build.xml" dir="service" target="compile"/>
    <ant antfile="build.xml" dir="service_webapp" target="compile"/>
  </target>

  <!-- ====================================================================== -->
  <!-- Test-compilation target                                                -->
  <!-- ====================================================================== -->

  <target name="compile-tests" description="Compile the test code">
    <ant antfile="build.xml" dir="client" target="compile-tests"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="compile-tests"/>
    <ant antfile="build.xml" dir="service" target="compile-tests"/>
    <ant antfile="build.xml" dir="service_webapp" target="compile-tests"/>
  </target>

  <!-- ====================================================================== -->
  <!-- Run all tests                                                          -->
  <!-- ====================================================================== -->

  <target name="test" description="Run the test cases">
    <ant antfile="build.xml" dir="client" target="test"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="test"/>
    <ant antfile="build.xml" dir="service" target="test"/>
    <ant antfile="build.xml" dir="service_webapp" target="test"/>
  </target>

  <!-- ====================================================================== -->
  <!-- Javadoc target                                                         -->
  <!-- ====================================================================== -->

  <target name="javadoc" description="Generates the Javadoc of the application">
    <ant antfile="build.xml" dir="client" target="javadoc"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="javadoc"/>
    <ant antfile="build.xml" dir="service" target="javadoc"/>
    <ant antfile="build.xml" dir="service_webapp" target="javadoc"/>
  </target>

  <!-- ====================================================================== -->
  <!-- Package target                                                         -->
  <!-- ====================================================================== -->

  <target name="package" description="Package the application">
    <ant antfile="build.xml" dir="client" target="package"/>
    <ant antfile="build.xml" dir="client_loading_test_tool" target="package"/>
    <ant antfile="build.xml" dir="service" target="package"/>
    <ant antfile="build.xml" dir="service_webapp" target="package"/>
  </target>

</project>
