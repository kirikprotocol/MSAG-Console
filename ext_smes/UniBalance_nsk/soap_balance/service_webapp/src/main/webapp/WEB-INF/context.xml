<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="soapService" class="com.sibinco.soap_balance.service.SoapService"/>

  <bean name="soapServiceExporter" class="org.codehaus.xfire.spring.remoting.XFireExporter">
    <property name="serviceBean"><ref local="soapService"/></property>
    <property name="serviceInterface" value="com.sibinco.soap_balance.service.BalanceService"/>
    <property name="xfire"><ref bean="xfire"/></property>
    <property name="serviceFactory">
      <ref bean="xfire.serviceFactory"/>
    </property>
  </bean>
</beans>