<project name="make runner routine" default="run_make">
  <!-- used properties declaration from caller-->
  <property name="SRC_DIR" value="" />
  <property name="MAKE_ARGS" value="" />
  <property name="BUILD_DIR" value="" />
  <property name="ORACLE_HOME" value="" />
  <property name="ORALIB_SUBDIR" value="" />
  <property name="EIN_SS7_LINKAGE" value="dynamic" />
  <property name="targets" value="" />
  <property name="XERCES_HOME" value="" />  
  <!-- end callers properties -->

  <target name="run_make" >
    <exec executable="make" failifexecutionfails="yes" failonerror="yes" dir="${SRC_DIR}">
      <arg line="${MAKE_ARGS} ${targets}"/>
      <env key="SMSC_SRCDIR" value="${SRC_DIR}"/>
      <env key="SMSC_BUILDDIR" value="${BUILD_DIR}"/>
      <env key="ORACLE_LIB" value="${env.ORACLE_HOME}/${ORALIB_SUBDIR}"/>
      <env key="EIN_SS7_LINKAGE" value="${EIN_SS7_LINKAGE}"/>
      <env key="XERCES_HOME" value="${XERCES_HOME}"/>
    </exec>
  </target>
</project>  
