#
# $Id$
#
# SmBilling service shared library loader
#
# format: binary_name source_name libraries
SMBILL_LIBS=$(SHARED_OPT) -L$(SMSC_BUILDDIR)/bin/inman/ldlib \
  -linman-services-smbill -linman-services-common -linman-abprov -linman-inap-xcfg \
  -linman-interaction-asyncmgr -linman-interaction-msgbill -linman-interaction-serializer \
  -linman-storage \
  -linman-inap-cap_sms -linman-comp-cap_sms -linman-comp -linman-common \
  -linman-codec_inc-cap -linman-codec_inc-map -linman-codec_inc-in_cs -linman-codec_inc-ros -linman-asn1rt \
  -lutil -lrt -ldl \
  -linman_ics_sched @inman/ldlib/libinman_ics_sched.so \
  -linman_ics_iapmgr @inman/ldlib/libinman_ics_iapmgr.so

# using global setting of service linkage
switch INMAN_ICS_LINKAGE
static: #no need for .so loader, service is statically linked into libinman
staticSS7:\
inman/ldlib/libinman_ics_smbill.so SmBillLoader %(SMBILL_LIBS)
default:\
inman/ldlib/libinman_ics_smbill.so SmBillLoader %(SMBILL_LIBS) \
  -linman_ics_tcapdsp @inman/ldlib/libinman_ics_tcapdsp.so
end switch

