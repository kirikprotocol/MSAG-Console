message BC_BATCH // 0x0007
    version 2.0
    property inheritsFrom="BatchCommand"
    bool   transactional  37 useGetter="isTransactional"
    BatchCmdArray batchContent 38 helperClass="BatchCommandFiller"
end

message BC_BATCH_RESP // 0x8007
    version 2.0
    property inheritsFrom="BatchResponse"
    byte statusValue 1
    BatchCmdArray batchContent 38 helperClass="BatchResponseFiller"
end

message BC_GETPROF
    version 2.0
    property inheritsFrom="GetProfileCommand"
end

message BC_GETPROF_RESP
    version 2.0
    property inheritsFrom="GetProfileResponse"
    byte statusValue 1
    BatchCmdArray content 39 helperClass="GetProfileResponseFiller"
end
