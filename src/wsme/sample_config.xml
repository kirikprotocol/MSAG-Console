<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE config SYSTEM "configuration.dtd">
<config>
    
    <section name="StartupLoader">
        <section name="DataSourceDrivers">
            <section name="OCIDataSourceDriver">
                <param name="type" type="string">OCI</param>
                <param name="loadup" type="string">../db/oci/libdb_oci.so</param>
            </section>
        </section>
    </section>
    
    <section name="WSme">

        <param name="SvcType" type="string">WSme</param>
        <param name="ProtocolId" type="int">333</param>
        
        <section name="ThreadPool">
            <param name="max" type="int">15</param>
            <param name="init" type="int">5</param>
        </section>  

        <section name="DataSource">
            <param name="type" type="string">OCI</param>
            <param name="connections" type="int">5</param>
            <param name="dbInstance" type="string">DBS_ORCL</param>
            <param name="dbUserName" type="string">smsc</param>
            <param name="dbUserPassword" type="string">smsc</param>
        </section>
            
        <section name="SMSC">
            <param name="host" type="string">smsc</param>
            <param name="port" type="int">9229</param>
            <param name="sid" type="string">3</param>
            <param name="timeout" type="int">10</param>
            <param name="password" type="string">3</param>
        </section>  
	
        <section name="Admin">
            <param name="host" type="string">smsc</param>
            <param name="port" type="int">9669</param>
        </section>  
	
	<section name="LangManager">
	    <param name="defaultLang" type="string">EN/EN</param>
	</section>
	
	<section name="AdManager">
	    <section name="History">
		<param name="age" type="int">1</param> <!-- in days -->
		<param name="cleanup" type="int">3600</param> <!-- in seconds -->
		<param name="messageLife" type="int">3600</param> <!-- in seconds -->
	    </section>
	    <section name="Repository">
	    </section>
	</section>

    </section>

</config>
