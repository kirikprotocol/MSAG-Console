<Server port="9001" shutdown="SHUTDOWN" debug="0">
  <Listener className="org.apache.catalina.mbeans.ServerLifecycleListener"
            debug="0"/>
  <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"
            debug="0"/>
  <Service name="Tomcat-Standalone">
    <Connector className="org.apache.coyote.tomcat4.CoyoteConnector"
               port="9002" minProcessors="2" maxProcessors="10"
               enableLookups="true" redirectPort="9003"
               acceptCount="100" debug="0" connectionTimeout="120000"
               useURIValidationHack="false" disableUploadTimeout="true" />
    <Engine name="Standalone" defaultHost="localhost" debug="0">
      <Logger className="org.apache.catalina.logger.FileLogger"
              prefix="catalina_log." suffix=".txt"
              timestamp="true"/>
      <Realm className="ru.novosoft.smsc.util.auth.SmscRealm" />
      <Host name="localhost" debug="0" appBase="webapps" 
       unpackWARs="true" autoDeploy="false">
        <Logger className="org.apache.catalina.logger.FileLogger"
                 directory="logs"  prefix="localhost_log." suffix=".txt"
	        timestamp="true"/>
        <Context path="/smsc" docBase="smsc" debug="0"
                 reloadable="true" crossContext="true">
          <Logger className="org.apache.catalina.logger.FileLogger"
                     prefix="localhost_examples_log." suffix=".txt"
        	  timestamp="true"/>
        </Context>
      </Host>
    </Engine>
  </Service>
</Server>
