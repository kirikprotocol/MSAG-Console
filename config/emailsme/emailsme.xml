<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE config SYSTEM "configuration.dtd">
<config>

  <section name="store">
    <param name="dir" type="string">store</param>
  </section>
  <section name="smpp">
      <param name="host" type="string">sunfire</param>
      <param name="port" type="int">9001</param>
      <param name="timeout" type="int">0</param>
      <param name="systemId" type="string">emailsme</param>
      <param name="password" type="string"></param>
      <param name="sourceAddress" type="string">.0.1.200</param>
      <param name="serviceType" type="string">EML</param>
      <param name="protocolId" type="int">34</param>
      <param name="retryTime" type="int">5</param>
  </section>

  <section name="listener">
    <param name="host" type="string">sunfire</param>
    <param name="port" type="int">9017</param>
  </section>

  <section name="admin">
    <param name="host" type="string">sunfire</param>
    <param name="port" type="int">9018</param>
  </section>

  <section name="mail">
    <param name="domain" type="string">sunfire.office.aurorisoft.com</param>
    <param name="stripper" type="string">bin/mailreaper.pl</param>
    <param name="format" type="string">#template=emailsmenotify#{from}="$$string import=from$$" {to}="$$string import=to$$" {subj}="$$string import=subj$$" {body}="$$string import=body$$"</param>
  </section>

  <section name="smtp">
    <param name="host" type="string">sunfire</param>
    <param name="port" type="int">25</param>
  </section>

  <section name="defaults">
    <param name="dailyLimit" type="int">20</param>
    <param name="annotationSize" type="int">460</param>
  </section>

</config>
