#!/bin/bash
if [ -f logs/cpers.err ]; then
  mv logs/cpers.err logs/cpers.err.old
fi
while true;
do
bin/cpers 1>/dev/null 2>>logs/cpers.err&
PID=$!
export PID
trap "kill -s SIGTERM $PID;wait $PID; exit" SIGTERM
wait $PID
if [ -f core ]; then
  DATE=`perl -e '($sec,$min,$hour,$mday,$mon,$year,$wday,$yday,$isdst)=localtime(time);printf("%04d%02d%02d%02d%02d%02d",$year+1900,$mon+1,$mday,$hour,$min,$sec)'`

  mkdir "$DATE"
  mv core "$DATE"
  mv logs/cpers.err "$DATE"
  if [ -f logs/cpers.err.old ]; then
    mv logs/cpers.err.old "$DATE"
  fi
  mv logs/cpers.log* "$DATE"
  cp -p bin/cpers "$DATE"
fi
done
