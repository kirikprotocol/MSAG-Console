<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE config SYSTEM "file://configuration.dtd">

<config>
  <section name="installation">
   <param name="type" type="string">HA</param>
   <param name="rgmapFile" type="string"></param>
  </section>

  <section name="nodes">
    <section name="smsc-node1">
      <param name="id" type="string">1</param>
    </section>

    <section name="smsc-node2">
      <param name="id" type="string">2</param>
    </section>
  </section>


  <section name="categories">
    <param name="1" type="string">category1</param>
    <param name="2" type="string">supercategory</param>
    <param name="3" type="string">super puper category mega giga</param>
    <param name="last used category id" type="int">3</param>
  </section>
  
  <section name="console">
    <param name="enabled" type="bool">false</param>
    <param name="humanPort" type="int">@console.human.port@</param>
    <param name="scriptPort" type="int">@console.script.port@</param>
  </section>

  <section name="daemons">
    <section name="@host.name@">
      <param name="port" type="int">@daemon.admin.port@</param>
      <param name="services folder" type="string">services</param>
    </section>
  </section>

  <section name="perfmon">
    <param name="appletport" type="int">@perfmon.applet.port@</param>
    <param name="smscport" type="int">@perfmon.smsc.port@</param>
  </section>

  <section name="topmon">
    <param name="appletport" type="int">@smemon.applet.port@</param>
    <param name="smscport" type="int">@smemon.smsc.port@</param>
  </section>

  <section name="profiler">
    <param name="storeFile" type="string">@store.file@</param>
  </section>
  
  <section name="providers">
    <param name="1" type="string">hello</param>
    <param name="2" type="string">mark</param>
    <param name="3" type="string">burger</param>
    <param name="last used provider id" type="int">3</param>
  </section>
  
  <section name="smsc">
    <param name="config folder" type="string">services/SMSC/conf</param>
    <param name="host" type="string">@connect.host@</param>
    <param name="port" type="int">@smsc.admin.port@</param>
  </section>

  <section name="system">
    <param name="services folder" type="string">@services.folder@</param>
    <param name="users file" type="string">webapps/smsc/WEB-INF/users.xml</param>
    <param name="localization file" type="string">webapps/smsc/WEB-INF/localization.xml</param>
    <param name="webapp folder" type="string">webapps/smsc</param>
    <param name="work folder" type="string">temp</param>
  </section>
  
  <section name="statsave_datasource">
      <param name="source" type="string">@jdbc.source@</param>
      <param name="driver" type="string">@jdbc.driver@</param>
      <param name="user" type="string">@db.user@</param>
      <param name="pass" type="string">@db.password@</param>
      <param name="tables_prefix" type="string">sms_stat</param>
  </section>  
</config>
