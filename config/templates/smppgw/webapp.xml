<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE config SYSTEM "file://configuration.dtd">

<config>

  <param name="users_config_file" type="string">webapps/smppgw/WEB-INF/users.xml</param>
  <param name="sme_file" type="string">services/smppgw/conf/sme.xml</param>
  <param name="gw_config" type="string">services/smppgw/conf/config.xml</param>
  <param name="gw_config_folder" type="string">services/smppgw/conf</param>
  <param name="gw name" type="string">smppgw</param>
  <section name="gw daemon">
    <param name="host" type="string">@connect.host@</param>
    <param name="port" type="int">@daemon.admin.port@</param>
    <param name="folder" type="string">@daemon.dir@</param>
  </section>
  <section name="perfmon">
    <param name="appletport" type="int">@perfmon.applet.port@</param>
    <param name="gwhost" type="string">@connect.host@</param>
    <param name="gwport" type="int">@perfmon.smppgw.port@</param>
  </section>
  <section name="jdbc">
    <param name="driver" type="string">@jdbc.driver@</param>
    <param name="source" type="string">@jdbc.source@</param>
    <param name="password" type="string">@db.password@</param>
    <param name="user" type="string">@db.user@</param>
  </section>
</config>