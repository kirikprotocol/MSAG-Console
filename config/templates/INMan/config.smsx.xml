<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE config SYSTEM "file://configuration.dtd">
<!-- "$Id$" -->
<!-- SMS Extra services configuration for INMan v0.6.0 or higher -->
<config> 
  <section name="SMSExtra">
    <!-- Each SMS Extra service (pack of services) is described by section of
      following format:
      section name="SMS_Extra_services_pack_name"
          param name="serviceCode" type="int"
            uint32_t, service id to store in CDR
          param name="serviceMask" type="int"
            uint30_t [1..16383], bit masks of used services for USSDC == INMan interaction
          param name="serviceAdr" type="string"
            optional service address for IDP, if omitted, the CDR is created
          param name="chargeBearer" type="bool"
            optional flag that forces the additional charging of the bearing
            message for prepaid abonents, by default = false
      end_section
     -->
    <section name="SMS-Flash">
      <param name="serviceCode" type="int">1</param>
      <param name="serviceMask" type="int">2</param>
      <param name="serviceAdr" type="string">smsx:7961</param>
    </section>

    <section name="SMS-Calendar">
      <param name="serviceCode" type="int">2</param>
      <param name="serviceMask" type="int">4</param>
      <param name="serviceAdr" type="string">smsx:7962</param>
    </section>

    <section name="SMS-Secret">
      <param name="serviceCode" type="int">3</param>
      <param name="serviceMask" type="int">8</param>
      <param name="serviceAdr" type="string">smsx:7963</param>
    </section>

    <section name="SMS-Group">
      <param name="serviceCode" type="int">4</param>
      <param name="serviceMask" type="int">16</param>
      <param name="serviceAdr" type="string">smsx:7964</param>
      <param name="chargeBearer" type="bool">true</param>
    </section>

    <section name="SMS-Flash-Calendar">
      <param name="serviceCode" type="int">5</param>
      <param name="serviceMask" type="int">6</param> <!-- 4+2 -->
      <param name="serviceAdr" type="string">smsx:7965</param>
    </section>

    <section name="SMS-Flash-Secret">
      <param name="serviceCode" type="int">6</param>
      <param name="serviceMask" type="int">10</param> <!-- 8+2 -->
      <param name="serviceAdr" type="string">smsx:7965</param>
    </section>

    <section name="SMS-Flash-Group">
      <param name="serviceCode" type="int">7</param>
      <param name="serviceMask" type="int">18</param> <!-- 16+2 -->
      <param name="serviceAdr" type="string">smsx:7965</param>
      <param name="chargeBearer" type="bool">true</param>
    </section>

    <section name="SMS-Calendar-Group">
      <param name="serviceCode" type="int">8</param>
      <param name="serviceMask" type="int">20</param> <!-- 4+16 -->
      <param name="serviceAdr" type="string">smsx:7965</param>
    </section>

  </section>
</config>

