<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "file://configuration.dtd">

<config>

    <section name="gw location">
        <param name="gw_config_folder" type="string">services/scag/conf</param>

        <param name="smpp_file" type="string">smpp.xml</param>
        <param name="gw_config" type="string">config.xml</param>
        <param name="rules_folder" type="string">rules</param>
        <param name="xsd_folder" type="string">rules/xsd</param>
        <param name="xsl_folder" type="string">rules/xsl</param>
        <param name="services_file" type="string">services.xml</param>
        <param name="operators_file" type="string">operators.xml</param>
        <param name="tariffs_file" type="string">tariffs.xml</param>
    </section>
    
    <param name="logger.properties_file" type="string">@logger.properties_file@</param>

    <param name="users_config_file" type="string">webapps/msag/WEB-INF/users.xml</param>
    <param name="status_folder" type="string">@stat.dir@/status</param>
    <param name="gw name" type="string">scag</param>
    <param name="show_interval" type="string">@status.show_interval@</param> 
    <param name="ids_file" type="string">webapps/msag/WEB-INF/ids.xml</param>
    <param name="locales_file" type="string">webapps/msag/WEB-INF/locales.xml</param>

    <section name="installation">
     <param name="type" type="string">@installation.type@</param>
     <param name="mirrorpath" type="string">@installation.mirrorpath@</param>
    </section>

    <section name="gw daemon">
        <param name="host" type="string">@connect.host@</param>
        <param name="port" type="int">@daemon.admin.port@</param>
        <param name="folder" type="string">@daemon.dir@</param>
    </section>
    <section name="perfmon">
        <param name="appletport" type="int">@stat.perf_applet.port@</param>
        <param name="gwhost" type="string">@connect.host@</param>
        <param name="gwport" type="int">@stat.perf_port@</param>
    </section>
    <section name="svcmon">
        <param name="appletport" type="int">@stat.perf_svc_applet.port@</param>
        <param name="svcHost" type="string">@connect.host@</param>
        <param name="svcPort" type="int">@stat.perf_svc_port@</param>
    </section>
    <section name="scmon">
        <param name="appletport" type="int">@stat.perf_sc_applet.port@</param>
        <param name="schost" type="string">@connect.host@</param>
        <param name="scport" type="int">@stat.perf_sc_port@</param>
    </section>
    <section name="rule editor">
        <param name="ping_port" type="int">@rule_editor.ping_port@</param> 	
        <param name="ping_timeout" type="int">@rule_editor.ping_timeout@</param>
    </section>
    <section name="jdbc">
        <param name="driver" type="string">@jdbc.driver@</param>
        <param name="source" type="string">@jdbc.source@</param>
        <param name="password" type="string">@db.password@</param>
        <param name="user" type="string">@db.user@</param>
    </section>
</config>