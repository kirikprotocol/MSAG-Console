<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE config SYSTEM "file://configuration.dtd">

<config>

  <section name="DataSource">
    <param name="connections" type="int">5</param>
    <param name="dbInstance" type="string">@db.instance@</param>
    <param name="dbUserName" type="string">@db.user@</param>
    <param name="dbUserPassword" type="string">@db.password@</param>
    <param name="type" type="string">OCI</param>
  </section>

  <section name="StartupLoader">
    <section name="DataSourceDrivers">
      <section name="OCIDataSourceDriver">
        <param name="loadup" type="string">libdb_oci.so</param>
        <param name="type" type="string">OCI</param>
      </section>
    </section>
  </section>

  <section name="admin">
    <param name="host" type="string">@listen.host@</param>
    <param name="port" type="int">@gateway.admin.port@</param>
  </section>

  <section name="core">
    <param name="eventQueueLimit" type="int">1000</param>
    <param name="protocol_id" type="int">34</param>
    <param name="state_machines_count" type="int">10</param>
    <param name="ussdTransactionTimeout" type="int">600</param>

    <section name="performance">
      <param name="host" type="string">@listen.host@</param>
      <param name="port" type="int">@perfmon.scag.port@</param>
    </section>
  </section>

  <section name="billing">
    <param name="module" type="string">libsimplebilling.so</param>
  </section>
  
  <section name="MessageStorage">
       <param name="statisticsDir" type="string">@storage.statistics_dir@</param>
        <param name="trafficDir" type="string">@storage.traffic_dir@</param>
  </section>
  
  <section name="BillingManager">
    <param name="configDir" type="string">@bill.config_dir@</param>
    <param name="soDir" type="string">@bill.so_dir@</param>
    <param name="BillingServerHost" type="string">@bill.server_host@</param>
    <param name="BillingServerPort" type="int">@bill.server_port@</param>
  </section>
  
  <section name="SessionManager">
    <param name="location" type="string">@session.location@</param>
  </section>
  <section name="StatisticsManager">
      <param name="statisticsDir" type="string">@stat.dir@</param>
      <param name="perfHost" type="string">@stat.perf_host@</param>
      <param name="perfGenPort" type="int">@stat.perf_port@</param>
      <param name="perfSvcPort" type="int">@stat,perf_svc_port@</param>
      <param name="perfScPort" type="int">@stat.perf_sc_port@</param>
  </section>
		        
  <section name="RuleEngine">
      <param name="location" type="string">@rules.path@</param>
  </section>
	
  <section name="smpp">
    <param name="host" type="string">@listen.host@</param>
    <param name="inactivityTime" type="int">30</param>
    <param name="inactivityTimeOut" type="int">30</param>
    <param name="port" type="int">@gateway.smpp.port@</param>
    <param name="readTimeout" type="int">60</param>
  </section>

  <section name="smsc-connections">
  </section>

  <section name="trafficControl">
    <param name="maxSmsPerSecond" type="int">1000</param>
  </section>

  <section name="providers">
    <param name="last used provider id" type="int">0</param>
  </section>
</config>
