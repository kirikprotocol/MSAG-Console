<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE counters SYSTEM "counters.dtd">

<counters>

    <templates>
	
	<template id="SimpleAcc" type="ACCUMULATOR">
	    <ca id="DefaultCATable"/>
	</template>
	
	<template id="SimpleAvg" type="AVERAGE">
	    <param name="sample_slot" type="int">10</param>
	    <ca id="UserCATable1"/>
	</template>
	
    </templates>

    <ca_tables>
    
	<ca_table id="DefaultCATable" system="true">
	    <limits min="0" max="1000">
		<limit procent="10" severity="NORMAL"/>
		<limit procent="75" severity="WARNING"/>
		<limit procent="95" severity="CRITICAL"/>
	    </limits>
	    <param name="some_param" type="string">101</param>
	</ca_table>

	<ca_table id="UserCATable1" system="false">
	    <limits min="100" max="500">
		<limit procent="5" severity="NORMAL"/>
		<limit procent="50" severity="WARNING"/>
		<limit procent="75" severity="MAJOR"/>
	    </limits>
	    <param name="some_user_param" type="string">101</param>
	</ca_table>
	
    </ca_tables>
    
</counters>