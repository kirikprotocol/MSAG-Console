        </section>  

        <section name="Admin">
            <param name="host" type="string">smsc</param>
            <param name="port" type="int">9759</param>
	</section>

        <section name="SMSC">
            <param name="host" type="string">smsc</param>
            <param name="port" type="int">9229</param>
            <param name="sid" type="string">MCISme</param>
